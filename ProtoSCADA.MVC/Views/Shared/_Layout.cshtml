<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProtoSCADA.MVC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/ProtoSCADA.MVC.styles.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="/">ProtoSCADA</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col text-center">
                <h1 class="display-4 text-primary">Welcome to ProtoSCADA</h1>
                <p class="lead">Manage your system's entities below</p>
            </div>
        </div>

      <!-- Entity Buttons Section -->
<div class="row justify-content-center">
    <!-- User Button -->
    <div class="col-md-2 col-sm-4 mb-4">
        <a href="/User/Index" class="btn btn-primary btn-lg w-100">
            <i class="fas fa-users"></i> Users
        </a>
    </div>
    <!-- Machine Button -->
    <div class="col-md-2 col-sm-4 mb-4">
        <a href="/Machine/Index" class="btn btn-success btn-lg w-100">
            <i class="fas fa-cogs"></i> Machines
        </a>
    </div>
    <!-- Metrics Button -->
    <div class="col-md-2 col-sm-4 mb-4">
        <a href="/Metric/Index" class="btn btn-info btn-lg w-100">
            <i class="fas fa-chart-line"></i> Metrics
        </a>
    </div>
    <!-- Factory Button -->
    <div class="col-md-2 col-sm-4 mb-4">
        <a href="/Factory/Index" class="btn btn-warning btn-lg w-100">
            <i class="fas fa-building"></i> Factorys
        </a>
    </div>
    <!-- Alerts Button -->
    <div class="col-md-2 col-sm-4 mb-4">
        <a href="/Alert/Index" class="btn btn-danger btn-lg w-100">
            <i class="fas fa-exclamation-triangle"></i> Alerts
        </a>
    </div>
    <!-- Events Button -->
    <div class="col-md-2 col-sm-4 mb-4">
        <a href="/Event/Index" class="btn btn-secondary btn-lg w-100">
            <i class="fas fa-calendar-alt"></i> Events
        </a>
    </div>
</div>

        <!-- Dynamic Content Rendering -->
        <div id="dynamic-content">
            @RenderBody()
        </div>
    </div>

    <!-- Footer Section -->
    <footer class="bg-dark text-white mt-5 py-4">
        <div class="container text-center">
            &copy; 2024 ProtoSCADA.MVC | <a href="/Home/Privacy" class="text-white">Privacy</a>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
