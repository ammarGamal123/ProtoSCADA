<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProtoSCADA.MVC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/ProtoSCADA.MVC.styles.css" rel="stylesheet" />
    <style>
        /* Custom Styles */
        .btn-lg {
            padding: 1.5rem;
            font-size: 1.25rem;
            border-radius: 10px;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .btn-lg:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .navbar-nav .nav-link {
            font-size: 1.1rem;
            margin-left: 1rem;
        }

        .footer {
            background-color: #343a40;
            color: #fff;
            padding: 1.5rem 0;
            width: 100%;
            text-align: center;
            margin-top: auto; /* Ensure the footer stays at the bottom */
        }

        .footer a {
            color: #fff;
            text-decoration: none;
        }

        .footer a:hover {
            color: #f8f9fa;
        }

        .dynamic-content {
            margin-top: 2rem;
            min-height: 70vh; /* Ensure the content area takes up at least 70% of the viewport height */
        }

        .entity-buttons {
            margin-bottom: 2rem;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Ensure the body takes up at least the full viewport height */
            margin: 0; /* Remove default margin */
        }

        .container {
            flex: 1; /* Allow the container to grow and fill the available space */
            padding-bottom: 2rem; /* Add some padding at the bottom to avoid content touching the footer */
        }
    </style>
</head>
<body class="bg-light">

    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="/">ProtoSCADA</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="mt-4 container">
        <!-- Welcome Section -->
        <div class="row mb-4">
            <div class="col text-center">
                <h1 class="display-4 text-primary">Welcome to ProtoSCADA</h1>
                <p class="lead">Manage your system's entities below</p>
            </div>
        </div>

        <!-- Entity Buttons Section -->
        <div class="row justify-content-center entity-buttons">
            <!-- User Button -->
            <div class="col-md-2 col-sm-4 mb-4">
                <a href="/User/Index" class="btn btn-primary btn-lg w-100">
                    <i class="fas fa-users"></i> Users
                </a>
            </div>
            <!-- Machine Button -->
            <div class="col-md-2 col-sm-4 mb-4">
                <a href="/Machine/Index" class="btn btn-success btn-lg w-100">
                    <i class="fas fa-cogs"></i> Machines
                </a>
            </div>
            <!-- Factory Button -->
            <div class="col-md-2 col-sm-4 mb-4">
                <a href="/Factory/Index" class="btn btn-warning btn-lg w-100">
                    <i class="fas fa-building"></i> Factories
                </a>
            </div>
            <!-- Line Button -->
            <div class="col-md-2 col-sm-4 mb-4">
                <a href="/Line/Index" class="btn btn-info btn-lg w-100">
                    <i class="fas fa-industry"></i> Lines
                </a>
            </div>
            <!-- Alert Button -->
            <div class="col-md-2 col-sm-4 mb-4">
                <a href="/Alert/Index" class="btn btn-danger btn-lg w-100">
                    <i class="fas fa-exclamation-triangle"></i> Alerts
                </a>
            </div>
            <!-- Event Button -->
            <div class="col-md-2 col-sm-4 mb-4">
                <a href="/Event/Index" class="btn btn-secondary btn-lg w-100">
                    <i class="fas fa-calendar-alt"></i> Events
                </a>
            </div>
            <!-- Report Button -->
            <div class="col-md-2 col-sm-4 mb-4">
                <a href="/Report/Index" class="btn btn-dark btn-lg w-100">
                    <i class="fas fa-file-alt"></i> Reports
                </a>
            </div>
        </div>

        <!-- Dynamic Content Rendering -->
        <div id="dynamic-content" class="dynamic-content">
            @RenderBody()
        </div>
    </div>


    <!-- JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>