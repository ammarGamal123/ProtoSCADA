@model ProtoSCADA.Entities.Entities.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="mt-5 container">
    <h2 class="mb-4 text-danger text-center">Delete User</h2>
    <div class="alert alert-warning">
        <h5>Are you sure you want to delete this user?</h5>
    </div>
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4>User ID: @Model.ID</h4>
        </div>
        <div class="card-body">
            <p><strong>ID:</strong> @Model.ID</p>
            <p><strong>Username:</strong> @Model.Name</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Registered On:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")</p>
        </div>
    </div>
    <form method="post" action="/User/DeleteConfirmed/@Model.ID" class="mt-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="/User/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
