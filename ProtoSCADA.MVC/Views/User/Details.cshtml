@model ProtoSCADA.Entities.Entities.User
@{
    ViewData["Title"] = "User Details";
}

<div class="mt-5 container">
    <h2 class="mb-4 text-success text-center">User Details</h2>
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>User ID: @Model.ID</h4>
        </div>
        <div class="card-body">
            <p><strong>ID:</strong> @Model.ID</p>
            <p><strong>Username:</strong> @Model.Name</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Role:</strong> @Model.Role</p>
            <p><strong>Created On:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")</p>
        </div>
    </div>
    <div class="mt-3">
        <a href="/User/Index" class="btn btn-secondary">Go Back</a>
    </div>
</div>
