@model ProtoSCADA.Entities.DTOs.ReportDto

@{
    ViewData["Title"] = "Create Report";
}

<div class="mt-5 container">
    <h2 class="text-primary text-center">Create New Report</h2>
    <div class="card">
        <div class="card-header bg-secondary text-white">
            <h4>Report Information</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreatedByUserID" class="control-label"></label>
                    <input asp-for="CreatedByUserID" class="form-control" />
                    <span asp-validation-for="CreatedByUserID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsArchived" class="control-label"></label>
                    <input asp-for="IsArchived" class="form-check-input" />
                    <span asp-validation-for="IsArchived" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FactoryID" class="control-label"></label>
                    <input asp-for="FactoryID" class="form-control" />
                    <span asp-validation-for="FactoryID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LineID" class="control-label"></label>
                    <input asp-for="LineID" class="form-control" />
                    <span asp-validation-for="LineID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tags" class="control-label"></label>
                    <input asp-for="Tags" class="form-control" />
                    <span asp-validation-for="Tags" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FilePath" class="control-label"></label>
                    <input asp-for="FilePath" class="form-control" />
                    <span asp-validation-for="FilePath" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}